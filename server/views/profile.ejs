<!DOCTYPE html>
<html>
<head>
  <title>User Profile</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="/profile.css">
</head>
<body>
  <div class="container">
    <h1>User Profile</h1>

    <div class="profile-info">
      <h2>Welcome, <%= user.name %></h2>
      <div class="row">
        <div class="col-md-6">
          <p><strong>First Name:</strong> <%= user.fname %></p>
          <p><strong>Last Name:</strong> <%= user.lname %></p>
          <p><strong>Username:</strong> <%= user.name %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Flat No:</strong> <%= user.flatno %></p>
          <p><strong>Wing Name:</strong> <%= user.wingname %></p>
          <p><strong>Email:</strong> <%= user.email %></p>
          <p><strong>Status:</strong> <%= user.status %></p>
        </div>
      </div>
    </div>

    <% if (user.vehicleDetails && user.vehicleDetails.length > 0) { %>
    <div class="vehicle-list">
      <h3>Vehicle List</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Vehicle Type</th>
            <th>Vehicle Number</th>
          </tr>
        </thead>
        <tbody>
          <% user.vehicleDetails.forEach(function(vehicle) { %>
          <tr>
            <td><%= vehicle.vehicleType %></td>
            <td><%= vehicle.vehicleNumber %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <% } else { %>
    <p>No vehicles found.</p>
    <% } %>

    <% if (canAddVehicle) { %>
    <div class="vehicle-details">
      <h3>Add Vehicle Details</h3>
      <form action="addVehicle" method="POST">
        <div class="form-group">
          <label for="vehicleType">Vehicle Type:</label>
          <input type="text" class="form-control" id="vehicleType" name="vehicleType" required>
        </div>
        <div class="form-group">
          <label for="vehicleNumber">Vehicle Number:</label>
          <input type="text" class="form-control" id="vehicleNumber" name="vehicleNumber" required>
        </div>
        <button type="submit" class="btn btn-primary">Add Vehicle</button>
      </form>
    </div>
    <% } %>

    <a href="logout" class="btn btn-primary">Logout</a> <!-- Added Logout button -->
  </div>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
