<!DOCTYPE html>
<html>
<head>
  <title>User Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="/profile.css">
 
</head>
<body>
  <div class="container">
    <h1 class="pro text-center mt-5">User Profile</h1>

    <div class="profile-info mt-5">
      <h2 class="pname">Welcome, <%= user.name %></h2>
      <div class="row">
        <div class="col-md-6">
          <div class="card mb-4">
            <div class="card-header">
              Personal Information
            </div>
            <div class="card-body">
              <p><strong>First Name:</strong> <%= user.fname %></p>
              <p><strong>Last Name:</strong> <%= user.lname %></p>
              <p><strong>Username:</strong> <%= user.name %></p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card mb-4">
            <div class="card-header">
              Address Information
            </div>
            <div class="card-body">
              <p><strong>Flat No:</strong> <%= user.flatno %></p>
              <p><strong>Wing Name:</strong> <%= user.wingname %></p>
              <p><strong>Email:</strong> <%= user.email %></p>
              <p><strong>Status:</strong> <%= user.status %></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if (user.vehicleDetails && user.vehicleDetails.length > 0) { %>
    <div class="vehicle-list">
      <h3 class="vlist">Vehicle List</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Vehicle Type</th>
            <th>Vehicle Number</th>
            <th>Parking Slot</th>
          </tr>
        </thead>
        <tbody>
          <% user.vehicleDetails.forEach(function(vehicle) { %>
          <tr>
            <td><%= vehicle.vehicleType %></td>
            <td><%= vehicle.vehicleNumber %></td>
            <td><%= vehicle.parkingSlot %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <% } else { %>
    <div class="vehicle-list">
      <h3>Vehicle List</h3>
      <p>No vehicles found.</p>
    </div>
    <% } %>

    <% if (canAddVehicle) { %>
    <div class="vehicle-details mt-5">
      <h3 class="vdetails">Add Vehicle Details</h3>
      <form action="addVehicle" method="POST">
        <div class="form-group">
          <label for="vehicleType">Vehicle Type:</label>
          <select class="form-control" id="vehicleType" name="vehicleType" required>
            <option value="2 Wheeler">2 Wheeler</option>
            <option value="4 Wheeler">4 Wheeler</option>
          </select>
        </div>        
        <div class="form-group">
          <label for="vehicleNumber">Vehicle Number:</label>
          <input type="text" class="form-control" id="vehicleNumber" name="vehicleNumber" pattern="[A-Z]{2}-[0-9]{2}-[A-Z]{2}-[0-9]{4}" placeholder="MH-04-ET-4389" required>
        </div>
        
        <button type="submit" class="btn btn-primary">Add Vehicle</button>
      </form>
    </div>
    <% } %>

        <a href="logout" class="btn btn-primary" style="margin-left: 30rem; margin-top: 2rem;">Logout</a> <!-- Added Logout button -->

  </div>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
