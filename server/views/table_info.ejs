<!DOCTYPE html>
<html>
<head>
  
  <title>Car Details</title>
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <!-- Apply custom styling -->
  <style>
    body {
      background-color: #f9f9f9;
    }

    .table-red {
      background-color: #ffffff;
      color: #721c24;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
    }

    .table-red th,
    .table-red td {
      text-align: center;
    }

    .table-red th {
      background-color: #fa8500;
      color: #fff;
      font-weight: bold;
    }

    .table-red tbody tr {
      transition: background-color 0.3s;
    }

    .table-red tbody tr:hover {
      background-color: rgb(241, 170, 0,0.5);
      color: black;
      font-weight: bolder;
    }

    .table-red tbody td {
      border-top: none;
    }

    .card-animation {
      animation-name: slideIn;
      animation-duration: 1s;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>
<body>
  <%- include('side_bar'); -%>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div style="margin-left: 236px;" class="col-lg-8">
        <div class="card table-red card-animation">
          <div class="card-body">
            <h2 class="text-center text-black mb-4">Car Details</h2>
            <div class="table-responsive">
              <table class="table table-bordered mb-0">
                <thead>
                  <tr>
                    <th>Car No</th>
                    <th>Owner Full Name</th>
                    <th>Flat No</th>
                    <th>Wing Name</th>
                    <th>Phone No</th>
                    <th>Photo</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>ABC123</td>
                    <td>John Doe</td>
                    <td>123-456-7890</td>
                    <td>123-456-7890</td>
                    <td>123-456-7890</td>
                    <td>imag1.jpeg</td>
                  </tr>
                  <!-- Add more table rows as needed -->
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Include Bootstrap JS (Optional) -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <!-- Apply animation to the card on page load -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const card = document.querySelector('.card-animation');
      card.classList.add('animated', 'slideIn');
    });
  </script>
</body>
</html>
