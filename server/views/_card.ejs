<%- include('side_bar.ejs'); -%>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin & Dashboard</title>
  <link rel="stylesheet" href="..\Assets\card.css">
  <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
  
  <!-- Include Font Awesome CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

  <style>
    /* Effects and Animations */
    .box {
      transition: transform 0.3s ease-in-out;
    }

    .box:hover {
      transform: scale(1.1);
    }

    /* Responsive Design */
    .home-section {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
    }


    .card-boxes {
      display: flex;
      justify-content: space-around;
      flex-wrap: nowrap;
      margin: 0 auto;
    }

   

    /* Additional Styles */
    .numbers {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .box_topic {
      font-size: 18px;
      margin-bottom: 10px;
    }

    .small-box-footer {
      text-decoration: none;
      font-size: 14px;
      display: block;
      margin-top: 10px;
    }

     /* Smaller Arrow Icon */
     .small-arrow {
      font-size: 12px;
      margin-left: 5px;
    }
  </style>
</head>

<body>
  <section class="home-section">
    <div class="container py-5">
      <div class="card-boxes">
        <div class="box">
          <div class="right_side">
            <div class="numbers">0.0</div>
            <div class="box_topic">Assigned Parking Slots</div>
            <a style='color:black' href="table_info" class="small-box-footer">More info <i class="fas fa-arrow-circle-right small-arrow"></i></a>
          </div>
          <i class="fas fa-car"></i>
        </div>
        <div class="box">
          <div class="right_side">
            <div class="numbers">0.0</div>
            <div class="box_topic">Empty Parking Slots</div>
            <a style="color:black; font-style:normal" href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right small-arrow"></i></a>
          </div>
          <i class="fas fa-car"></i>
        </div>
      </div>
    </div>
  </section>

</body>
